{
  "$schema": "http://json.schemastore.org/template",
  "author": "kPherox",
  "classifications": ["Mod"],
  "identity": "dev.kpherox.RimWorldModTempalte",
  "name": "RimWorld Mod Template",
  "shortName": "rimworld",
  "sourceName":"ModTemplate",
  "symbols": {
    "Author": {
      "type": "parameter",
      "datatype": "string",
      "replaces": "AuthorName"
    },
    "Description": {
      "type": "parameter",
      "datatype": "string",
      "replaces": "ModDescription"
    },
    "UseHarmony": {
      "type": "parameter",
      "datatype": "bool"
    }
  },
  "tags": {
    "language": "C#",
    "type": "project"
  },
  "sources": [
    {
      "modifiers": [
        {
          "exclude": [
            ".git/**",
            ".gitignore",
            "**/*.dll",
            "README.md"
          ]
        }
      ]
    }
  ]
}
